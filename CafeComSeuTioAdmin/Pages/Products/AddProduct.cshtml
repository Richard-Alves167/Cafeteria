@page
@model CafeComSeuTioAdmin.Pages.Products.AddProductModel
@{
}
<link rel="stylesheet" href="~/css/addProduct.css" asp-append-version="true" />
<section>
	<h1>Adicionar um produto</h1>
	<hr />
	<div id="divSection">
		<form method="post" enctype="multipart/form-data">
			@*<div asp-validation-summary="All"></div>*@
			<div id="forms">
				<div id="generealForms">
					<div>
						<label class="labelForm" asp-for="newProduct.Name">Name</label>
						<input asp-for="newProduct.Name" class="form-control" />
						<span asp-validation-for="newProduct.Name"></span>
					</div>
					<div>
						<label class="labelForm" asp-for="newProduct.ShortDescription">ShortDescription</label>
						<input asp-for="newProduct.ShortDescription" class="form-control" />
						<span asp-validation-for="newProduct.ShortDescription"></span>
					</div>
					<div>
						<label class="labelForm" asp-for="newProduct.Price">Price</label>
						<input asp-for="newProduct.Price" class="form-control" />
						<span asp-validation-for="newProduct.Price"></span>
					</div>
					<div>
						<label class="labelForm" asp-for="newProduct.Category">Category</label>
						<select asp-for="newProduct.Category" class="form-control">
							<option value="Drink">Drink</option>
							<option value="Dessert">Dessert</option>
							<option value="Savory">Savory</option>
							<option value="Kit">Kit</option>
						</select>
					</div>
				</div>
				<div id="descriptionImageForms">
					<div>
						<label class="labelForm" asp-for="newProduct.Description">Description</label>
						<textarea asp-for="newProduct.Description" class="inputDescriptionForm form-control"></textarea>
						<span asp-validation-for="newProduct.Description"></span>
					</div>
					<div>
						<label class="labelForm" asp-for="newProduct.Upload">Upload</label>
						<input asp-for="newProduct.Upload" class="form-control" />
					</div>
				</div>
			</div>
			<button>Create</button>
		</form>
	</div>
</section>
