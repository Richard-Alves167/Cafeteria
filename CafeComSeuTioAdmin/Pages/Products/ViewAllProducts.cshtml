@page
@model CafeComSeuTioAdmin.Pages.Products.ViewAllProductsModel
@{
	<h1>Tabela de produtos</h1>
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<td>Id</td>
				<td>Imagem</td>
				<td>Nome</td>
				<td>Pequena Descrição</td>
				<td>Descrição</td>
				<td>Preço</td>
				<td>Categoria</td>
			</tr>
		</thead>
		<hr />
		@foreach (var produto in Model.ListaProduto)
		{
			<tr>
				<td>@produto.Id</td>
				<td><img src="~/images/menu/@produto.ImageFileName" /></td>
				<td>@produto.Name</td>
				<td>@produto.ShortDescription</td>
				<td>@produto.Description</td>
				<td>R$ @produto.Price</td>
				<td>@produto.Category</td>
				<td> <a asp-page="EditProduct" asp-route-id="@produto.Id">editar</a></td>
			</tr>
		}
	</table>
}

