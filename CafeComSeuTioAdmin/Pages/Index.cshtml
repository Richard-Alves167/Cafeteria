				<li><img class="imagemMusicaPlaylist" src="~/images/cats/pataGatoPreto.png"><span>Beatles - Nirvana</span></li>
				<li><img class="imagemMusicaPlaylist" src="~/images/cats/pataGatoPreto.png"><span>Beatles - Nirvana</span></li>
				<li><img class="imagemMusicaPlaylist" src="~/images/cats/pataGatoPreto.png"><span>Beatles - Nirvana</span></li>
				<li><img class="imagemMusicaPlaylist" src="~/images/cats/pataGatoPreto.png"><span>Beatles - Nirvana</span></li>
				<li><img class="imagemMusicaPlaylist" src="~/images/cats/pataGatoPreto.png"><span>Beatles - Nirvana</span></li>
				<li><img class="imagemMusicaPlaylist" src="~/images/cats/pataGatoPreto.png"><span>Beatles - Nirvana</span></li>
			</ul>
		</div>
		<div class="player-box">
			<div class="player">
				<img class="cover" src="~/images/cats/ab.gif" alt="Cat Lo-Fi" />
				<div class="song-info">Beatles - abcde</div>
				<div class="controls">
					<button><img class="controlesPlayer" src="~/images/iconsAction/previus-button.png"></button>
					<button><img class="controlesPlayerPrincipal" src="~/images/cats/gatoAudioContinuo.gif"></button>
					<button><img class="controlesPlayer" src="~/images/iconsAction/next-button.png"></button>
					<button><img class="controlesPlayer" src="~/images/iconsAction/sound.png"></button>
				</div>
				<input type="range" class="progress-bar" value="30" />
			</div>
		</div>
		<div></div>
	</div>
</section>
<section id="novidades">
	<h2>Novidades</h2>
	<div id="sectionCards">
		@foreach (var product in Model.listaProdutosUltimosLancamentos) {
			<a asp-page="ProductDetailsClient" asp-route-id="@product.Id" class="card">
				<div class="card-inner">
					<div class="card-front">
						<img src="~/images/menu/@product.ImageFileName" alt="Café Bom D+" />
						<h3 class="cardName">@product.Name</h3>
					</div>
					<div class="card-back">
						<h3 class="cardName">@product.Name</h3>
						<p class="cardPrice">Price: R$@product.Price</p>
						<p class="cardShortDescription">@product.ShortDescription</p>
						<p class="cardDescription">@product.Description</p>
					</div>
				</div>
			</a>
		}
	</div>
</section>
<section id="contato">
	<h2>Contato</h2>
	<div id="sectionContato">
		<div id="enviarEmail">
			<div>
				<input type="text" name="name" value="" placeholder="Nome" class="smallInput" />
				<input type="email" name="name" value="" placeholder="E-mail" class="smallInput" />
				<input type="number" name="name" value="" placeholder="Telefone" class="smallInput" />
				<button>Enviar</button>
			</div>
			<div>
				<textarea placeholder="Escreva sua mensagem aqui" class="largeInput"></textarea>
			</div>
		</div>
		<div id="localizacao">
			<span>Rua São Bernardo dos Coitacazes n° 123</span>
			<img src="~/images/others/googleMaps.jpg" />
			<span>Segunda à Sexta - 06hrs - 19hrs</span>
			<span>Sábado, Domingo e Feriados - 10hrs - 17hrs</span>
		</div>
	</div>
</section>
<script src="~/js/carrouselBanner.js" asp-append-version="true"></script>
