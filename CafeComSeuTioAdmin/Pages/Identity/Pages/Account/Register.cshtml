@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<link rel="stylesheet" href="~/css/signIn.css" asp-append-version="true" />

<div class="divPricipal">
	<div class="divImageLogin">
		<img src="~/images/coffeShopBackground1.jpg" class="imageLogin" />
		<div class="divImageLoginCenter">
			<img src="~/images/logoCafeKwaiBrancoReduzido.png" />
            <span>Crie sua conta e aproveite todos os recursos exclusivos e comece a explorar!</span>
		</div>
	</div>
	<section>
        <span class="spanLoginTop">Sign In</span>
        <hr />
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
			<div class="divInput">
				<label asp-for="Input" class="spanLogin">Username</label>
				<input asp-for="Input" class="inputLogin" autocomplete="username" aria-required="true" placeholder="My name" />
				<span asp-validation-for="Input" class="text-danger"></span>
			</div>
            <div class="divInput">
				<label asp-for="Input.Email" class="spanLogin">Email</label>
                <input asp-for="Input.Email" class="inputLogin" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="divInput">
				<label asp-for="Input.Password" class="spanLogin">Password</label>
                <input asp-for="Input.Password" class="inputLogin" autocomplete="new-password" aria-required="true" placeholder="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="divInput">
				<label asp-for="Input.ConfirmPassword" class="spanLogin">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" class="inputLogin" autocomplete="new-password" aria-required="true" placeholder="password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
			<button id="registerSubmit" type="submit" class="botaoLogin">REGISTER</button>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
